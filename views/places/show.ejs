<% layout('layout/app') %>

<div class="row py-3">
  <div class="col-6 offset-3">
    <div class="card">
      <img
        src="<%= place.image %>"
        alt="<%= place.title %>"
        class="card-img-top w-100"
      />
      <div class="card-body">
        <div class="card-title"><%= place.title %></div>
        <div class="card-text"><%= place.description %></div>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= place.location %></li>
        <li class="list-group-item">Rp.<%= place.price %></li>
      </ul>
      <div class="card-body">
        <a
          href="/places/<%= place._id %>/edit"
          class="btn btn-warning text-white"
          >Edit</a
        >
        <form
          action="/places/<%= place._id %>?_method=DELETE"
          method="POST"
          style="display: inline !important"
        >
          <button class="btn btn-danger mx-1">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
