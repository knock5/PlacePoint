<% layout('layout/app') %>

<h1>Edit Place</h1>
<form action="/places/<%= place._id %>?_method=PUT" method="POST">
  <label for="title">Title</label>
  <input
    type="text"
    id="title"
    name="place[title]"
    value="<%= place.title %>"
    required
  />
  <br />
  <label for="location">Location</label>
  <input
    type="text"
    id="location"
    name="place[location]"
    value="<%= place.location %>"
    required
  />
  <br />
  <label for="price">Price</label>
  <input
    type="text"
    id="price"
    name="place[price]"
    value="<%= place.price %>"
    required
  />
  <br />
  <button type="submit">Save Place</button>
</form>
<br />
<a href="/places">Back to all places</a>
