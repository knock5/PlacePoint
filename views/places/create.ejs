<% layout('layout/app') %>

<h1>Create a New Place</h1>
<form action="/places" method="POST">
  <label for="title">Title</label>
  <input type="text" id="title" name="place[title]" required />
  <br />
  <label for="location">Location</label>
  <input type="text" id="location" name="place[location]" required />
  <br />
  <label for="price">Price</label>
  <input type="text" id="price" name="place[price]" required />
  <br />
  <button type="submit">Create Place</button>
</form>
<br />
<a href="/places">Back to all places</a>
